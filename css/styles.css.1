html {
    box-sizing: border-box;
}

*, ::after, ::before {
    box-sizing: inherit;
}

body {
    color: #000;
    background-color: #fff;
    max-width: 1280px;
    margin: 0 auto;
    line-height: 1.15;
    font-family: 'Ubuntu', sans-serif;
    font-size: 12px;
    min-width: 248px;
}

.headline {
    font-size: 1.75em;
    text-align: center;
}

.container {
    display: flex;
    margin: 0 auto;
    padding: 10px;
}

@media (max-width: 991px) {
    .container {
        flex-wrap: wrap;
    }
}

.section {
    flex-basis: 30%;
    justify-content: stretch;
    border: solid 2px #1E3246;
    background-color: #bbb;
    margin: 12px;
    min-height: 150px;
    flex-grow: 1;
}

@media (max-width: 767px) {
    .section {
        flex-basis: 100%;
    }
}

@media (max-width: 991px) {
    .section--special {
        flex-basis: 100%;
    }
}

.section__headerContainer {
    display: grid;
    justify-content: center;
}

.section__header {
    width: 150px;
    text-align: center;
    font-size: 1.25em;
    padding: 5px;
    margin: -2px;
}

.section__paragraph {
    padding: 5px;
    margin: 0;
}
